package com.mtit.patient;

import com.mtit.hospital.Hospital;
import org.osgi.framework.BundleActivator;
import org.osgi.framework.BundleContext;
import org.osgi.framework.ServiceReference;

public class PatientActivator implements BundleActivator {

	ServiceReference hospitalServiceReference;
	Hospital hospitalService;
	
	public void start(BundleContext context) throws Exception {
		hospitalServiceReference = context.getServiceReference(Hospital.class.getName());
		hospitalService = (Hospital)context.getService(hospitalServiceReference);
		
		Patient p1 = new Patient();
		p1.setPatientName("A");
		Patient p2 = new Patient();
		p1.setPatientName("B");
		Patient p3 = new Patient();
		p1.setPatientName("C");
		Patient p4 = new Patient();
		p1.setPatientName("D");
		Patient p5 = new Patient();
		p1.setPatientName("E");
		Patient p6 = new Patient();
		p1.setPatientName("F");
		Patient p7 = new Patient();
		p1.setPatientName("G");
		
		hospitalService.addAponitement(p1);
		hospitalService.addAponitement(p2);
		hospitalService.addAponitement(p3);
		hospitalService.addAponitement(p3);
		hospitalService.addAponitement(p5);
		hospitalService.addAponitement(p6);
		hospitalService.addAponitement(p7);
	}

	public void stop(BundleContext bundleContext) throws Exception {
		
	}

}
